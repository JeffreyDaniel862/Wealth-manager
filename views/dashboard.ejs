<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="shortcut icon" href="images/logo2.png" type="image/png">
    <title>jd</title>
    <link rel="stylesheet" href="css/dashboard.css">
    <link rel="stylesheet" href="css/nav.css">
    <script src="https://cdn.jsdelivr.net/npm/apexcharts"></script>
</head>

<body>
    <%- include('nav') %>
        <div class="content" id="blur">
            <div class="amount box">
                <h1>₹ <%= userdetail.salary %>
                </h1>
                <div class="cash">
                    <% if (totalexpense=="" ) { %>
                        <h3 class="light">Expense: ₹ 0</h3>
                        <h3 class="light">Total: ₹ <%= (userdetail.salary) %></h3>
                        <% } else { %>
                            <h3 class="light">Expense: ₹ <%= totalexpense[0].total %>
                            </h3>
                            <h3 class="light">Total: ₹ <%= (userdetail.salary) + (totalexpense[0].total) %></h3>
                            <% } %>
                </div>
            </div>
            <div class="profile box">
                <img src="images/user.png" alt="User image">
                <h2>
                    <%= userdetail.firstname %>
                        <%= userdetail.lastname %>
                </h2>
                <h3>
                    <%= userdetail.job %>
                </h3>
            </div>
            <div class="transcation box">
                <h3 style="font-family: 'Courier New', Courier, monospace; text-align: center;">Transcations:</h3>
                <% transcations.forEach(transcation=> { %>
                    <div class="inex">
                        <div class="in">
                            <p class="ex">
                                <%= transcation.expensename %>
                            </p>
                            <p class="exdate">
                                <%= transcation.expdate %> / <%= transcation.expmonth %> / <%= transcation.expyear %>
                            </p>
                        </div>
                        <p class="ex">₹ <%= transcation.amount %>
                        </p>
                    </div>
                    <% }) %>
                        <!-- <div class="inex">
                <div class="in">
                    <p class="ex">Car Wash</p>
                    <p class="exdate">24, Aug 23</p>
                </div>
                <p class="ex">$400</p>
            </div> -->
            </div>
            <div class="category box">
                <div id="chart1">
                </div>
            </div>
            <div class="graph box">
                <h3 style="font-family: 'Courier New', Courier, monospace; text-align: center;">Expense Graph:</h3>
                <div id="chart">
                </div>
            </div>

        </div>
        <script src="nav.js"></script>
        <script type="text/javascript">


            var graph = ('<%-JSON.stringify(graphData) %>')

            let month = ["Jan", "Feb", "Mar", "Apr", "May", "Jun", "Jul", "Aug", "Sept", "Oct", "Nov", "Dec"]

            let monthArray = [];
            let amountArray = [];
            var graphData = JSON.parse(graph)
            graphData.forEach(graphD => {
                amountArray.push(graphD.total)
                monthArray.push(month[(graphD._id.month)-1])
            })

            var options = {
                chart: {
                    type: 'bar'
                },
                series: [{
                    name: 'Expense',
                    data: amountArray
                }],
                xaxis: {
                    categories: monthArray
                }
            }

            var chart = new ApexCharts(document.querySelector("#chart"), options);

            chart.render();

            var categories = ('<%-JSON.stringify(categoryData) %>')


            let categoryArray = [];
            let expenseArray = [];

            var graphDatas = JSON.parse(categories)
            graphDatas.forEach(graphDs => {
                categoryArray.push(graphDs._id)
                expenseArray.push(graphDs.total)
            })

            var options = {
                series: [{
                    data: expenseArray
                }],
                chart: {
                    type: 'bar',
                    height: 150
                },
                plotOptions: {
                    bar: {
                        barHeight: '100%',
                        distributed: true,
                        horizontal: true,
                        dataLabels: {
                            position: 'bottom'
                        },
                    }
                },
                colors: ['#33b2df', '#546E7A', '#d4526e', '#13d8aa', '#A5978B', '#2b908f', '#f9a3a4', '#90ee7e',
                    '#f48024', '#69d2e7'
                ],
                dataLabels: {
                    enabled: true,
                    textAnchor: 'start',
                    style: {
                        colors: ['#fff']
                    },
                    formatter: function (val, opt) {
                        return opt.w.globals.labels[opt.dataPointIndex] + ":  " + val
                    },
                    offsetX: 0,
                    dropShadow: {
                        enabled: true
                    }
                },
                stroke: {
                    width: 1,
                    colors: ['#fff']
                },
                xaxis: {
                    categories: categoryArray,
                },
                yaxis: {
                    labels: {
                        show: false
                    }
                },
                title: {
                    text: 'Category-Wise Expense',
                    align: 'center',
                    floating: true
                },
                subtitle: {
                    text: '',
                    align: 'center',
                },
                tooltip: {
                    theme: 'dark',
                    x: {
                        show: false
                    },
                    y: {
                        title: {
                            formatter: function () {
                                return ''
                            }
                        }
                    }
                }
            };

            var chart = new ApexCharts(document.querySelector("#chart1"), options);
            chart.render();
        </script>

</body>

</html>